div
	div.xxx.modal-header
		div.row.modal-row(style="margin-bottom:0px;")
			div.col-xs-12
				h3.modal-title Hex Demo Login
	div.modal-body
		div.row.modal-row
			div.col-xs-2.text-right.bbs_text_label_lt 
			div.col-xs-10(ng-dblclick="showRawPatientData()", style="font-size:14pt; font-weight:bold;") {{PatientData.data.name.fullLabel}}
		div.row.modal-row
			div.col-xs-3.text-right.form-label User Name: 
			div.col-xs-7 
				input.form-control(ng-model="userName")
		div.row.modal-row
			div.col-xs-2.text-right.bbs_text_label_lt Phone:
			div.col-xs-10 
				span.bbs_text_label_lt Main: 
				span {{PatientData.data.phones.alt}} &nbsp;&nbsp;
				span(ng-if="PatientData.data.phones.cell && PatientData.data.phones.cell.length>0")
					span.bbs_text_label_lt Cell: 
					span {{PatientData.data.phones.cell}} &nbsp;&nbsp;
				span.bbs_text_label_lt Work: 
				span {{PatientData.data.phones.work}}
		div.row.modal-row(ng-if="PatientData.data.insurance.primary && PatientData.data.insurance.primary.length>0")
			div.col-xs-2.text-right.bbs_text_label_lt Insurance:
			div.col-xs-10 
				span.bbs_text_label_lt Primary: 
				span {{PatientData.data.insurance.primary}} &nbsp;&nbsp;
				span.bbs_text_label_lt Group: 
				span {{PatientData.data.insurance.primaryGrp}}
	div.modal-footer(style="padding-bottom:16px;")
		div.col-xs-8(style="margin:0px; margin-top:-10px; color:#777; padding:0px 0px 0px 10px; font-size:9pt; text-align:left;") 
			span &nbsp;
		div.col-xs-4()
			button.btn.btn-primary(ng-click="$modalCtrl.ok()") OK
			button.btn.btn-warning(ng-click="$modalCtrl.cancel()") Cancel
